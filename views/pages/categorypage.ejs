<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category</title>
    <style>
        .container-fluid{
            margin: 0;
            padding: 0;
            width: 90%;
        }
        .topic-header{
            color: white;
            margin-top: 2%;
            margin-bottom: 2%;
        }
        .topic-header h2{
            margin-left: 5%;
            margin-bottom: 2%;
        }
        .main-content{
            width: 40%;
            height: 60%;
            padding: 3%;
            border-radius: 3%;
            background-color: rgba(217, 217, 217, 0.25);
        }
        
        .main-content img{
            width: 100%;
            height: 100%;
            border-radius: 2%;
        }
        .top-content{
            display: flex;
            justify-content: center;
            gap: 1vw ;
            margin-top: 2vh;
            margin-bottom: 2vh;
        }   
        .main-content button{
            border-radius: 20px;
            border: 2px white solid;
        }

        @media only screen and (max-width: 768px) {
            /* Hide the second .main-content div on mobile */
            .top-content{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
            .topic-header h2{
                margin-left: 10%;
            }
            .main-content{
                width: 80%;
                margin-bottom: 3%;
            }
            
        }
        @media only screen and (min-width: 768px) {
            /* Hide the second .main-content div on mobile */
            .main-content{
                width: 30%;
                height: 10%;
            }
            
        }
        
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="topic-header">
        <h2>Category</h2>
        <div class="top-content">
            <% categories.forEach(category => { %>
            <div class="main-content">
                <img src="<%= category.category_image %>">
                <% var formattedCategoryName = category.category_name.replace(/([A-Z])/g, ' $1').trim(); %>
                <a href="<%= category.category_name %>"><button><%= formattedCategoryName %></button></a>
            </div>
            <% }); %>
    </div>
</body>
</html>